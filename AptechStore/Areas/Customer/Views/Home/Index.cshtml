@model cloudscribe.Pagination.Models.PagedResult<AptechStore.Models.Product>

<section class="slide-top p-2">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://nhasachphuongnam.com/images/promo/184/Banner_khong_khi_sach_890x396px-01.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://nhasachphuongnam.com/images/promo/184/Banner_sach_noi_bat_890x396px-01.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://nhasachphuongnam.com/images/promo/184/Banner_Refresh_to_am_890x396px-01.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<div class="row">
    <div class="form-control bg-primary text-light h3">Book Categories</div>
</div>
<div class="row pb-3 backgroundWhite">
    @foreach (var product in Model.Data)
    {
        <div class="col-lg-3 col-md-6">
            <div class="card-deck mb-2">
                <div class="card mr-2">
                    <img src="@product.ImageUrl" class="card-img-top rounded" style="min-width: 215px;height: 450px" />
                    <div class="p-1 card-body">
                        <p class="card-title h5"><b style="color:#2c3e50">@product.Title</b></p>
                        <p class="card-title text-primary">by <b>@product.Author</b></p>
                        <p>List Price: <b class="">$ @product.Price.ToString(".00")</b></p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" class="btn btn-primary" style="display: block" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
      }
        </div>
        <cs-pager cs-paging-pagenumber=@Model.PageNumber
                  cs-paging-totalitems=@Model.TotalItems
                  cs-paging-pagesize=@Model.PageSize
                  cs-pagenumber-param="pagenumber"
                  asp-controller="Home"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
